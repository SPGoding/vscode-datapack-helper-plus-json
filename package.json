{
    "name": "datapack-helper-plus-json",
    "version": "1.0.2",
    "publisher": "SPGoding",
    "engines": {
        "vscode": "^1.22.0"
    },
    "license": "MIT",
    "displayName": "datapack helper plus (JSON)",
    "description": "Provides JSON validations for Minecraft datapacks.",
    "categories": [
        "Linters",
        "Other"
    ],
    "keywords": [
        "minecraft",
        "datapack",
        "json"
    ],
    "dependencies": {
        "datapack-json-schemas": "^1.0.4"
    },
    "devDependencies": {
        "@semantic-release/changelog": "^3.0.4",
        "@semantic-release/git": "^7.0.16",
        "gitmoji-cli": "^1.9.2",
        "semantic-release": "^15.13.21",
        "semantic-release-gitmoji": "^1.3.0",
        "semantic-release-vsce": "^2.2.8"
    },
    "contributes": {
        "languages": [
            {
                "id": "json",
                "extensions": [
                    "mcmeta"
                ]
            }
        ],
        "jsonValidation": [
            {
                "fileMatch": "data/*/advancements/**.json",
                "url": "./node_modules/datapack-json-schemas/src/advancement.json"
            },
            {
                "fileMatch": "data/*/loot_tables/**.json",
                "url": "./node_modules/datapack-json-schemas/src/loot_table.json"
            },
            {
                "fileMatch": "pack.mcmeta",
                "url": "./node_modules/datapack-json-schemas/src/pack.mcmeta.json"
            },
            {
                "fileMatch": "data/*/recipes/**.json",
                "url": "./node_modules/datapack-json-schemas/src/recipe.json"
            },
            {
                "fileMatch": "data/*/tags/blocks/**.json",
                "url": "./node_modules/datapack-json-schemas/src/tags/block.json"
            },
            {
                "fileMatch": "data/*/tags/entity_types/**.json",
                "url": "./node_modules/datapack-json-schemas/src/tags/entity_type.json"
            },
            {
                "fileMatch": "data/*/tags/fluids/**.json",
                "url": "./node_modules/datapack-json-schemas/src/tags/fluid.json"
            },
            {
                "fileMatch": "data/*/tags/functions/**.json",
                "url": "./node_modules/datapack-json-schemas/src/tags/function.json"
            },
            {
                "fileMatch": "data/*/tags/items/**.json",
                "url": "./node_modules/datapack-json-schemas/src/tags/item.json"
            }
        ]
    },
    "icon": "icon.png",
    "scripts": {
        "commit": "gitmoji -c",
        "release": "semantic-release",
        "test": "echo \"Error: no test specified\" && exit 1"
    },
    "repository": {
        "type": "git",
        "url": "https://github.com/SPGoding/vscode-datapack-helper-plus-json.git"
    },
    "bugs": {
        "url": "https://github.com/SPGoding/vscode-datapack-helper-plus-json/issues"
    },
    "homepage": "https://github.com/SPGoding/vscode-datapack-helper-plus-json#readme"
}
